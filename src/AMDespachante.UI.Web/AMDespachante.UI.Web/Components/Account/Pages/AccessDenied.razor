@layout LoginLayout

@page "/Account/AccessDenied"

<CustomPageTitle Titulo="Acesso Negado"/>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container-fluid d-flex align-items-center justify-content-center vh-100">
    <div class="text-center p-5 bg-white shadow-lg rounded-4">
        <div class="mb-4">
            <i class="bi bi-shield-lock-fill text-danger" style="font-size: 6rem;"></i>
        </div>

        <h1 class="display-4 text-danger mb-3">Acesso Negado</h1>

        <p class="lead text-muted mb-4">
            Você não tem permissão para acessar este recurso.
        </p>

        <div class="alert alert-warning d-inline-block mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Somente usuários autorizados podem visualizar esta página.
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-outline-primary">
                <i class="bi bi-house me-2"></i>Página Inicial
            </a>
        </div>
    </div>
</div>

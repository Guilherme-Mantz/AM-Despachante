@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark d-flex align-center">
    <div class="container-fluid">
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudImage Src="/images/logo-despachante-redondo.png" Alt="Logo AM Despachante" Width="40" Height="40" Class="mr-1" ObjectFit="ObjectFit.Cover" />
            <MudText Typo="Typo.h6" Class="mud-text-primary font-weight-bold" style="color: #EEEEEE">AM Despachante</MudText>
        </MudStack>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Roles="ADMIN">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="atendimentos">
                        <MudIcon Class="mr-2" Icon="@Icons.Material.Filled.Assignment" aria-hidden="true" /> Atendimentos
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="clientes">
                        <MudIcon Class="mr-2" Icon="@Icons.Material.Filled.People" aria-hidden="true" /> Clientes
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="veiculos">
                        <MudIcon Class="mr-2" Icon="@Icons.Material.Filled.DirectionsCar" aria-hidden="true" /> Veículos
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="recursos">
                        <MudIcon Class="mr-2" Icon="@Icons.Material.Filled.Build" aria-hidden="true" /> Recursos
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}


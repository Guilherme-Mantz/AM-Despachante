@page "/clientes/edit/{id:guid}"

@rendermode InteractiveServer

@using AMDespachante.Application.Interfaces
@using AMDespachante.Application.ViewModels
@using AMDespachante.UI.Web.Components.Shared.Clientes
@using Microsoft.AspNetCore.Authorization

@inject NavigationManager NavigationManager
@inject IClienteAppService ClienteAppService
@inject ISnackbar Snackbar

@implements IDisposable

<CustomPageTitle Titulo="Clientes" />

<ClienteForm Cliente="cliente" OnSubmit="@(async (cliente) => await EditarCliente(cliente))" />

@code {

    [Parameter]
    public Guid Id { get; set; }

    private ClienteViewModel cliente { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        cliente = await ClienteAppService.GetByIdWithVeiculos(Id);
    }

    private async Task EditarCliente(ClienteViewModel cliente)
    {
        var result = await ClienteAppService.Update(cliente);
        if (!result.IsValid)
        {
            result.Errors.ToList()
                .ForEach(erro => Snackbar.Add(erro.ErrorMessage, Severity.Error, c => c.SnackbarVariant = Variant.Filled));
            return;
        }

        Snackbar.Add($"Cliente atualizado com sucesso!", Severity.Success, c => c.SnackbarVariant = Variant.Filled);

        NavigationManager.NavigateTo("/clientes");
    }

    public void Dispose()
    {
        GC.SuppressFinalize(this);
    }
}
